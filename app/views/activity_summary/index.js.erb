const planillaContainer = document.getElementById('planilla');

if (planillaContainer) {
  requestAnimationFrame(() => {
    setTimeout(() => {
      planillaContainer.outerHTML = `<%= j render partial: 'planilla', locals: { summary: @summary } %>`;
    }, 0);
  });
} else {
  console.error("Elemento #planilla no encontrado en el DOM.");
}
